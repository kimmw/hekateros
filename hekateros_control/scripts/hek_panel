    w = Label(wframe, width=16, anchor=E, text='Servo Id:')
    w.grid(row=2, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='State:')
    w.grid(row=3, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Position(deg):')
    w.grid(row=4, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Odometer(ticks):')
    w.grid(row=5, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Encoder(ticks):')
    w.grid(row=6, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Velocity(%max):')
    w.grid(row=7, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Speed(raw):')
    w.grid(row=8, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Effort(raw):')
    w.grid(row=9, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Temperature(C):')
    w.grid(row=10, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Voltage(volts):')
    w.grid(row=11, column=0, sticky=W)
    w = Label(wframe, width=16, anchor=E, text='Alarms:')
    w.grid(row=12, column=0, sticky=W)

    return  # RDK

    for i in range(0, len(joint.name)):
      name = jonit.name[i]
      self.m_robotJoint[name] = {}

      col = 1 + i

      w = Label(wframe, width=10, anchor=CENTER, text=name)
      w.grid(row=1, column=col, sticky=W)

      var = IntVar()
      var.set(joint.master_servo_id)
      w = Entry(wframe, relief='flat', anchor=CENTER, textvar=var, fg='black',
