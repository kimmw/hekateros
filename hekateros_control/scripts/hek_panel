##
## \brief Window class supporting application.
##
class window(Frame):
  def __init__(self, master=None, cnf={}, **kw):
    Frame.__init__(self, master=master, cnf=cnf, **kw)
    self.master.title("Hekateros Control Panel")
    self.grid(row=0, column=0, padx=5, pady=5)
    self.createWidgets()
    self.m_results = None

  ## \brief Create gui widgets with supporting data and show.
  def createWidgets(self):
    self.m_icons        = {}    # must keep loaded icons referenced
    self.m_wBttn        = {}    # button widgets
    self.m_robotStatus  = {}    # robot status 
    self.m_robotJoint   = {}    # robot joint state
    self.createHeading()
    self.createLeftButtons()
    self.createCenterPanel()
    self.createRightButtons()
    self.createStatusBar()

  ## \brief Create top gui heading.
  def createHeading(self):
    wframe = Frame(self)
    wframe['borderwidth'] = 2
    wframe['relief'] = 'flat'
    wframe['width'] = 140
    wframe.grid(row=0, column=0, columnspan=3, padx=1, pady=3, sticky=W+E)

    # rn logo
    w = Label(wframe)
    w['text'] = 'rn'
    w['anchor'] = W
    w.grid(row=0, column=0, sticky=W)
    
    # top heading
    w = Label(wframe)
    w['font'] =('Helvetica', 16)
    w['text'] = 'Hekateros'
    w['anchor'] = CENTER
    w.grid(row=0, column=1, sticky=E+W)

    # hek logo
    w = Label(wframe)
    w['text'] = 'hek'
    w['anchor'] = E
    w.grid(row=0, column=2, sticky=E)
    
  ## \brief Create gui left hand side buttons.
  def createLeftButtons(self):
    wframe = Frame(self)
    wframe['borderwidth'] = 2
    wframe['relief'] = 'ridge'
    wframe.grid(row=1, column=0, padx=1, pady=3, sticky=N+W+E)

    # calibrate
    w = self.createButton(wframe, "Calibrate", "icons/icon_calib.png",
                            self.calibrate)
    w.grid(row=0, column=0, sticky=N+E+W)

    # park
    w = self.createButton(wframe, "Park", "icons/icon_hek_park.png",
                            self.gotoParkPos)
    w.grid(row=1, column=0, sticky=N+E+W)

    # balance
    w = self.createButton(wframe, "Balance", "icons/icon_hek_balance.png",
                            self.gotoBalancedPos)
    w.grid(row=2, column=0, sticky=N+E+W)

    # zero point
    w = self.createButton(wframe, "Zero\nPoint", "icons/icon_hek_zeropt.png",
                            self.gotoZeroPt)
    w.grid(row=3, column=0, sticky=N+E+W)

    # open gripper
    w = self.createButton(wframe, "Open\nGripper",
                                  "icons/icon_gripper_open.png",
                                  self.openGripper)
    w.grid(row=4, column=0, sticky=N+E+W)

    # close gripper
    w = self.createButton(wframe, "Close\nGripper",
                                  "icons/icon_gripper_close.png",
                                  self.closeGripper)
    w.grid(row=5, column=0, sticky=N+E+W)

  ## \brief Create robot status and joint state center panel.
  def createCenterPanel(self):
    self.m_wPanelFrame = Frame(self)
    self.m_wPanelFrame['borderwidth'] = 2
    self.m_wPanelFrame['relief'] = 'ridge'
    self.m_wPanelFrame.grid(row=1, column=1, padx=1, pady=3, sticky=N+W+E)

    self.createRobotStatusPanel(self.m_wPanelFrame)
    self.createJointStatePanel(self.m_wPanelFrame, None) # RDK

  ## \brief Create robot status upper center panel.
  ##
  ## \param parent  Parent widget
  def createRobotStatusPanel(self, parent):
    wframe = Frame(parent)
    wframe['borderwidth'] = 2
    wframe['relief'] = 'ridge'
    wframe.grid(row=0, column=0, padx=1, pady=3, sticky=N+W+E)

    # heading
    w = Label(wframe)
    w['font'] =('Helvetica', 12)
    w['text'] = 'Robot Status'
    w['justify'] = CENTER
    w.grid(row=0, column=1, columnspan=6, sticky=E+W)

    # robot mode status
    var = StringVar()
    var.set("auto mode")
    w = Entry(wframe)
    w['borderwidth'] = 2
    w['relief']   = 'flat'
    w['textvar']  = var
    w['fg']       = 'black'
    w['state']    = 'readonly'
    w.grid(row=1, column=0, padx=3, pady=3, sticky=W)
    d = {'var': var, 'w': w}
    self.m_robotStatus['mode'] = d

    # robot calibration status
    var = StringVar()
    var.set("not calibrated")
    w = Entry(wframe)
    w['borderwidth'] = 2
    w['relief']   = 'flat'
    w['textvar']  = var
    w['fg']       = 'black'
    w['state']    = 'readonly'
    w.grid(row=1, column=1, padx=3, pady=3, sticky=W)
    d = {'var': var, 'w': w}
    self.m_robotStatus['calibration'] = d

    # robot driven status
    var = StringVar()
    var.set("motors driven")
    w = Entry(wframe)
    w['borderwidth'] = 2
    w['relief']   = 'flat'
    w['textvar']  = var
    w['fg']       = 'black'
    w['state']    = 'readonly'
    w.grid(row=1, column=2, padx=3, pady=3, sticky=W)
    d = {'var': var, 'w': w}
    self.m_robotStatus['driven'] = d

    # robot alarms status
    w = Label(wframe)
    w['text'] = 'alarms'
    w['justify'] = RIGHT
    w.grid(row=1, column=3, sticky=E)

    # alarms icon
    w = Label(wframe)
    w['text'] = 'o'
    w['justify'] = LEFT
    w.grid(row=1, column=4, sticky=W)
    d = {'var': None, 'w': w}
    self.m_robotStatus['alarms'] = d

    # robot estop status
    w = Label(wframe)
    w['text'] = 'estop'
    w['justify'] = RIGHT
    w.grid(row=1, column=5, sticky=E)

    # alarms icon
    w = Label(wframe)
    w['text'] = 'o'
    w['justify'] = LEFT
    w.grid(row=1, column=6, sticky=W)
    d = {'var': None, 'w': w}
    self.m_robotStatus['alarms'] = d

  ## \brief Create joint state lower center panel.
  ##
  ## \param parent  Parent widget
  def createJointStatePanel(self, parent, joint):
    wframe = Frame(parent)
    wframe['borderwidth'] = 2
    wframe['relief'] = 'ridge'
    wframe.grid(row=1, column=0, padx=1, pady=3, sticky=N+W+E)

    # heading
    w = Label(wframe)
    w['font'] =('Helvetica', 12)
