<?xml version="1.0" encoding="utf-8"?>

<KinBody name="Hekateros">

  <Body name="Base" type="dynamic">
    <Geom type="trimesh" modifiable="false">
      <data>    ../../models/hekateros/Base-Bottom.stl 0.001  </data>
      <Render>  ../../models/hekateros/Base-Bottom.stl 0.001  </Render>
    </Geom>
  </Body>

  <Body name="Base2">
    <Geom type="trimesh" modifiable="false">
      <data>    ../../models/hekateros/Base-Top.stl 0.001  </data>
      <Render>  ../../models/hekateros/Base-Top.stl 0.001  </Render>
      <Translation>-0.045 .06 0.053</Translation>
    </Geom>
  </Body>

  <Joint circular="true" name="rotatingBase" type="hinge">
    <Body>Base</Body>
    <Body>Base2</Body>
    <offsetfrom>Base2</offsetfrom>
    <weight>4</weight>
    <limitsdeg>-180 180</limitsdeg>
    <axis>0 0 1</axis>
    <maxvel>3</maxvel>
    <resolution>1</resolution>
  </Joint>
  
  <Body name="upperArm"> 
    <Translation>.0 0.018 0.17</Translation>
    <Geom type="trimesh" modifiable="false">
      <Translation>-0.015  -0.018 .17</Translation>
      <data>    ../../models/hekateros/RN-HK-A-301.stl 0.001  </data>
      <Render>  ../../models/hekateros/RN-HK-A-301.stl 0.001  </Render>
      <quat>0.707106781 0 0.707106781 0</quat>
    </Geom>
  </Body>

  <Joint circular="false" name="shoulder" type="hinge">
    <Body>Base2</Body>
    <Body>upperArm</Body>
    <offsetfrom>upperArm</offsetfrom>
    <Translation>0 0 .5</Translation>
    <weight>4</weight>
    <limitsdeg>-60 60</limitsdeg>
    <axis>1 0 0</axis>
    <maxvel>3</maxvel>
    <resolution>1</resolution>
  </Joint>


  <Body name="foreArm"> 
    <Translation>-0.015 0.018 0.40</Translation>
    <Geom type="trimesh" modifiable="false">
      <data>    ../../models/hekateros/Upper-Arm.stl 0.001  </data>
      <Render>  ../../models/hekateros/Upper-Arm.stl 0.001  </Render>
      <Translation>0. -0.018 0.17</Translation>
      <quat>0.707106781 0 0.707106781 0</quat>
    </Geom>
  </Body>

  <Joint circular="false" name="elbow" type="hinge">
    <Body>upperArm</Body>
    <Body>foreArm</Body>
    <offsetfrom>foreArm</offsetfrom>
    <weight>4</weight>
    <limitsdeg>-90 90</limitsdeg>
    <axis>1 0 0</axis>
    <maxvel>3</maxvel>
    <resolution>1</resolution>
  </Joint>


  <Body name="endEffInterface"> 
    <Translation>0.002 0.018 0.64</Translation>
    <Geom type="trimesh" modifiable="false">
      <data>    ../../models/hekateros/RN-HK-A-205.stl 0.001  </data>
      <Render>  ../../models/hekateros/RN-HK-A-205.stl 0.001  </Render>
      <Translation>0.002 0.0 0.02</Translation>
      <quat>0 0 1 0</quat>
    </Geom>
  </Body>

  <Joint circular="false" name="wristTilt" type="hinge">
    <Body>foreArm</Body>
    <Body>endEffInterface</Body>
    <offsetfrom>endEffInterface</offsetfrom>
    <weight>4</weight>
    <limitsdeg>-90 90</limitsdeg>
    <axis>1 0 0</axis>
    <maxvel>3</maxvel>
    <resolution>1</resolution>
  </Joint>

  <Body name="endEffector"> 
    <Translation>0.0 .02 0.69</Translation>
    <Geom type="trimesh" modifiable="false">
      <data>    ../../models/hekateros/End-Effector.stl 0.001  </data>
      <Render>  ../../models/hekateros/End-Effector.stl 0.001  </Render>
      <quat>0 0 1 0</quat>
    </Geom>
  </Body>

  <Joint circular="true" name="wristRotate" type="hinge">
    <Body>endEffInterface</Body>
    <Body>endEffector</Body>
    <offsetfrom>endEffector</offsetfrom>
    <weight>4</weight>
    <limitsdeg>-180 180</limitsdeg>
    <axis>0 0 1</axis>
    <maxvel>3</maxvel>
    <resolution>1</resolution>
  </Joint>

</KinBody>

